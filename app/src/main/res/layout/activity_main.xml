<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7D8791"
    tools:context="com.example.exceed.earthquake.MainActivity">

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/list_view"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginTop="@dimen/margin_top">-->
    <!--</ListView>-->

    <Spinner
        android:backgroundTint="#FFFFFF"
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_marginRight="16dp"
        android:entries="@array/country_arrays"
        android:layout_above="@+id/calendar"
        android:layout_toEndOf="@+id/textView" />

    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">
    </CalendarView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="16dp"
        android:text="Service [ Machine Learning ]"
        android:layout_marginLeft="16dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country : "
        android:textColor="#FFFFFF"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="39dp"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginBottom="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predict !"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_alignEnd="@+id/spinner1"
        android:layout_alignStart="@+id/textView2" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="0,1,2,3,4,5,6,7"
        android:gravity="center"
        android:layout_below="@+id/calendar">

        <TableRow
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Scale:"
                android:backgroundTint="#4485FF"
                android:textSize="15dp"
                android:layout_margin="1dp"
                android:layout_column="0"
                android:background="#FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1"
                android:backgroundTint="#00ffbf"
                android:layout_margin="1dp"
                android:textSize="15dp"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2"
                android:backgroundTint="#00ff80"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_column="2"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="3"
                android:backgroundTint="#bfff00"
                android:layout_margin="1dp"
                android:textSize="15dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="3"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4"
                android:backgroundTint="#ffff00"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_column="4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="5"
                android:textSize="15dp"
                android:backgroundTint="#ffbf00"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="5"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="6"
                android:backgroundTint="#ff8000"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_column="6"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="7"
                android:textSize="15dp"
                android:backgroundTint="#ff4000"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="7"
                />


        </TableRow>

        <TableRow
            android:background="#000000"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:weightSum="40"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:backgroundTint="#4485FF"
                android:text="Level:"
                android:layout_margin="1dp"
                android:textSize="10dp"
                android:layout_column="0"
                android:background="#FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:backgroundTint="#00ffbf"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Weak"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:layout_column="1"
                android:background="#FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#00ff80"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Light"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:layout_column="2"
                android:background="#FFFFFF"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#bfff00"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Moderate"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Strong"
                android:backgroundTint="#ffff00"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="4" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Severe"
                android:backgroundTint="#ffbf00"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:layout_column="5" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Violent"
                android:layout_margin="1dp"
                android:textSize="10dp"
                android:background="#FFFFFF"
                android:backgroundTint="#ff8000"
                android:gravity="center"
                android:layout_column="6" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Extreme"
                android:textSize="10dp"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                android:gravity="center"
                android:backgroundTint="#ff4000"
                android:layout_column="7" />
        </TableRow>


    </TableLayout>

</RelativeLayout>
